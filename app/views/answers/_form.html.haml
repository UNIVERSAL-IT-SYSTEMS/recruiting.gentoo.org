.page-header
  %h3= @question.title
.page-header
  %p= markdown(@question.content)
#epiceditor
= simple_form_for [@question, @answer], :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id, as: :hidden
  = f.input :question_id, as: :hidden
  = f.input :content, as: :hidden
  .form-actions
    = f.button :submit, :class => 'btn-primary', value: "Submit"
    = link_to t('.cancel', :default => t("helpers.links.cancel")), questions_path, :class => 'btn'
- content_for :js do
  :javascript
    $(function() {
      var epicEditor = new EpicEditor({basePath: "/assets", file: {name: "a#{@answer.id}", defaultContent: "#{escape_javascript(@answer.content)}"}}).load().reflow('height');
      $("form").submit(function() {
        $("#answer_content").val(epicEditor.exportFile());
      })
    });
