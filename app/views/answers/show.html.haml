.page-header
  %h3
    = @question.title
    %small#toggle_question= link_to "Toggle content", "#"

.page-header.hidden.question
  %p= markdown(@question.content)

.answer= markdown @answer.content
%p= answer_status(@answer)
%p= link_to "by #{@answer.user.name}", candidate_path(@answer.user)
%p= render :partial => 'nav_buttons'
- if can? :review, Answer
  - if @answer.awaiting_review?
    .form-actions
      = link_to [:accept, @answer], :class => 'btn btn-primary', method: :put do
        %i.icon-ok
        Accept
      = link_to [:reject, @answer], :method => "put", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger' do
        %i.icon-remove
        Reject
= render :partial => 'comments/form', locals: {commentable: @answer}

- content_for :js do
  :javascript
    $("#toggle_question").click(function() {
      $(".question").toggle();
    });
