.page-header
  %h2= @question.title
  %span#toggle_question= link_to "toggle content", "#"

.page-header.hidden.question
  %p= markdown(@question.content)

.answer= markdown @answer.content
%p= link_to "by #{@answer.user.name}", novice_path(@answer.user)
.form-actions
  = link_to "Accept", [:accept, @answer], :class => 'btn btn-primary'
  = link_to "Reject", [:reject, @answer], :method => "put", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
  = link_to t('.back', :default => t("helpers.links.back")), answers_path, :class => 'btn'
= render :partial => 'comments/form', locals: {commentable: @answer}

- content_for :js do
  :javascript
    $("#toggle_question").click(function() {
      $(".question").toggle();
    });
